{
  "parserOptions": {
    "ecmaVersion": 2017
  },
  "plugins": [
    "promise"
  ],
  "extends": "eslint:recommended",
  "rules": {
    "no-undef": "off",
    "no-console": "off",
    "promise/no-nesting": 1,
    "promise/always-return": 2,
    "promise/catch-or-return": 2,
    "prefer-promise-reject-errors": 2
  }
}
